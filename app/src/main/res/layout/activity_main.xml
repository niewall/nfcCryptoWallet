<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="200dp" app:srcCompat="@drawable/bitcoin" android:id="@+id/imageView"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NFC Crypto Wallet"
                android:textSize="36dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/text"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
        <Button
                android:text="Read Wallet"
                android:layout_width="214dp"
                android:layout_height="wrap_content" android:id="@+id/button" tools:layout_editor_absoluteY="419dp"
                android:layout_gravity="center"
                tools:layout_editor_absoluteX="167dp"/>
        <Button
                android:text="Write Wallet"
                android:layout_gravity="center"
                android:layout_width="214dp"
                android:layout_height="wrap_content" android:id="@+id/button5"/>
        <Button
                android:text="Settings"
                android:layout_width="214dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" android:id="@+id/button4"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
